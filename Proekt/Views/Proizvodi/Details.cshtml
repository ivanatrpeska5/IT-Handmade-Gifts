@model Proekt.Models.Proizvodi

@{
    ViewBag.Title = "Details";
}

<h2>Детали</h2>

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <div class="card-title" style=" height: 50px; font-size: 20px; align-items: center; background: #413f35; color: white; justify-content: center; padding: 1px;">
                                @Model.Name
                            </div>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ImageURL" width="100%" alt="@Model.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Description</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                            @Html.ActionLink("Back to List", "Index")
                            <a class="btn btn-success text-white "href="@Url.Action("Create", "Orders",new { id = @Model.Id })">
                            <span class="btn btn-outline-primary glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Нарачај (Цена @Model.Price.ToString()ден.)
                            </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>